---
import DragScrollItem from "../components/DragScrollItem.astro";

const { post, page } = Astro.props;
---

<DragScrollItem>
  <a href={`${page}/${post.sys.id}`} class="min-w-[300px] max-w-[300px]">
    <div class="aspect-h-1 aspect-w-1 w-full">
      <img
        src={post.image.url}
        class="h-full w-full rounded-tl-md rounded-tr-md"
        alt={`blog post number ${post.id}`}
        transition:name={`image-${post.title}`}
        id="postImage"
        loading="lazy"
        decoding="async"
      />
    </div>
    <h3 class="mt-4 text-lg text-white truncate">
      {post.title}
    </h3>
  </a>
</DragScrollItem>
