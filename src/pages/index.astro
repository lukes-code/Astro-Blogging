---
import { client } from "../lib/contentful";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Post from "../components/Post.astro";

type Post = {
  id: number;
  title: string;
  image: {
    url: string;
  };
  sys: {
    id: number;
  };
};

const posts = await client.getAllBlogPosts();
---

<Layout title="lukes-code">
  <Header transition:persist />
  <h2 class="text-base text-center text-stone-400">
    A blog built with Astro, Contentful, and TailwindCSS
  </h2>
  <section class="container mx-auto mt-4">
    <div
      class="mt-4 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8"
    >
      {posts.map((post: Post) => <Post key={post.sys.id} post={post} />)}
    </div>
  </section>
</Layout>
